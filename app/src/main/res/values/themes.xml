<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GrannyAid" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#4CAF50</item>
        <!-- Larger default text size for elderly users -->
        <item name="android:textSize">22sp</item>
        <!-- High contrast colors -->
        <item name="android:textColor">#000000</item>
        <!-- Increase touch targets -->
        <item name="android:minHeight">48dp</item>
        <item name="android:buttonStyle">@style/BiggerButtonStyle</item>
        <item name="materialButtonStyle">@style/BiggerButtonStyle</item>
        <item name="alertDialogTheme">@style/LargeDialogTheme</item>
    </style>
    
    <!-- Style for larger buttons with better touch targets -->
    <style name="BiggerButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">64dp</item>
    </style>
    
    <!-- Style for dialogs with larger text -->
    <style name="LargeDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textSize">22sp</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:padding">24dp</item>
    </style>
    
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">64dp</item>
    </style>
</resources>